@model PageUpdateModel
@{
    Layout = "_DashboardLayout";
}
@section links{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-bs4.min.css">
}
<div class="card mt-5">
    <div class="card-body">
        <h4 class="header-title">Sayfa Güncelle</h4>

        <form asp-controller="Dashboard" asp-action="UpdatePage" method="post">
            <input type="hidden" asp-for="@Model.Id" value="@Model.Id"/>
            <div class="mb-4">
                <label asp-for="@Model.Title">Sayfa Adı</label>
                <input class="form-control" type="text" asp-for="@Model.Title" value="@Model.Title">
                <span class="text-danger" asp-validation-for="@Model.Title"></span>
            </div>

            <div class="mb-4">
                <label asp-for="@Model.Content">İçerik</label>
                <textarea id="editor" class="form-control"value="@Model.Content" asp-for="@Model.Content"></textarea>
                <span class="text-danger" asp-validation-for="@Model.Content"></span>
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Güncelle</button>
            </div>

        </form>
    </div>
</div>
@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-bs4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#editor').summernote({
                height: 750
            });
        });
    </script>
}