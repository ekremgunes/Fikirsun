@model CategoryUpdateModel
@{
    Layout = "_DashboardLayout";
}
<div class="card mt-5">
    <div class="card-body">
        <h4 class="header-title">Kategori Güncelle</h4>

        <form asp-controller="Dashboard" asp-action="UpdateCategory" method="post">
            <input type="hidden" asp-for="@Model.Id" value="@Model.Id"/>
            <div class="mb-4">
                <label asp-for="@Model.Name">Kategori Adı</label>
                <input class="form-control" type="text" asp-for="@Model.Name" value="@Model.Name">
                <span class="text-danger" asp-validation-for="@Model.Name"></span>
            </div>
            <div class="mb-4">
                <label asp-for="@Model.CategoryOrder">Sıra</label>
                <input  class="form-control" max="5000" min="1" type="number" value="@Model.CategoryOrder" asp-for="@Model.CategoryOrder">
                <span class="text-danger" asp-validation-for="@Model.CategoryOrder"></span>
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Güncelle</button>
            </div>

        </form>
    </div>
</div>