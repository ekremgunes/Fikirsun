@model UpdateSpamModel
@{
    Layout = "_DashboardLayout";
}
<div class="card mt-5">
    <div class="card-body">
        <h4 class="header-title">Spam Kelime Güncelle</h4>

        <form asp-controller="Dashboard" asp-action="UpdateSpam" method="post">
            <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />
            <div class="mb-4">
                <label asp-for="@Model.Name">Spam Kelime Adı</label>
                <input class="form-control" type="text" asp-for="@Model.Name" value="@Model.Name">
                <span class="text-danger" asp-validation-for="@Model.Name"></span>
            </div>
            
            <div>
                <button type="submit" class="btn btn-primary">Güncelle</button>
            </div>

        </form>
    </div>
</div>